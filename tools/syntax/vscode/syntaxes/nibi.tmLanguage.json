{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Nibi",
  "scopeName": "source.nibi",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#constants" },
    { "include": "#special-variables" },
    { "include": "#type-tags" },
    { "include": "#dict-operations" },
    { "include": "#keywords" },
    { "include": "#operators" },
    { "include": "#list-operators" },
    { "include": "#memory-ffi" },
    { "include": "#type-functions" },
    { "include": "#string-functions" },
    { "include": "#module-access" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.nibi",
          "match": "#.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.nibi",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.nibi",
              "match": "\\\\([\"\\\\/bfnrt]|u[0-9a-fA-F]{4})"
            },
            {
              "name": "meta.embedded.expression.nibi",
              "begin": "\\\\\\(",
              "end": "\\)",
              "patterns": [
                { "include": "#keywords" },
                { "include": "#operators" },
                { "include": "#numbers" },
                { "include": "#constants" },
                { "include": "#special-variables" },
                { "include": "#type-functions" }
              ]
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.nibi",
          "match": "\\b[0-9]+\\.[0-9]+([eE][+-]?[0-9]+)?\\b"
        },
        {
          "name": "constant.numeric.integer.nibi",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.nibi",
          "match": "\\b(true|false|nil|nan|inf)\\b"
        }
      ]
    },
    "special-variables": {
      "patterns": [
        {
          "name": "variable.language.nibi",
          "match": "\\$(args|e)\\b"
        }
      ]
    },
    "type-tags": {
      "patterns": [
        {
          "name": "entity.name.tag.type.nibi",
          "match": ":(u8|u16|u32|u64|i8|i16|i32|i64|f32|f64|int|float|ptr|str|char|nil)\\b"
        }
      ]
    },
    "dict-operations": {
      "patterns": [
        {
          "name": "entity.name.tag.dict.nibi",
          "match": ":(let|get|del|keys|vals|args)\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.nibi",
          "match": "\\b(if|loop|try|throw|exit)\\b"
        },
        {
          "name": "keyword.other.nibi",
          "match": "\\b(set|fn|drop|assert|alias|env|at|iter|eval|quote|import|use|macro|dict|clone|nop|defer|exchange)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.nibi",
          "match": ":="
        },
        {
          "name": "keyword.operator.yield.nibi",
          "match": "<-"
        },
        {
          "name": "keyword.operator.arithmetic.nibi",
          "match": "(\\*\\*|[+\\-*/%])"
        },
        {
          "name": "keyword.operator.comparison.nibi",
          "match": "\\b(eq|neq|and|or|not)\\b"
        },
        {
          "name": "keyword.operator.comparison.nibi",
          "match": "(<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.bitwise.nibi",
          "match": "\\b(bw-and|bw-or|bw-xor|bw-not|bw-lsh|bw-rsh)\\b"
        }
      ]
    },
    "list-operators": {
      "patterns": [
        {
          "name": "keyword.operator.list.nibi",
          "match": "(<<\\||\\|>>|<\\|>|>\\||\\|<)"
        }
      ]
    },
    "memory-ffi": {
      "patterns": [
        {
          "name": "support.function.memory.nibi",
          "match": "\\b(extern-call|mem-new|mem-del|mem-cpy|mem-load|mem-is-set)\\b"
        }
      ]
    },
    "type-functions": {
      "patterns": [
        {
          "name": "storage.type.nibi",
          "match": "\\b(i8|i16|i32|i64|u8|u16|u32|u64|f32|f64)\\b"
        },
        {
          "name": "support.function.type.nibi",
          "match": "\\b(int|str|char|float|split|type|len)\\b"
        }
      ]
    },
    "string-functions": {
      "patterns": [
        {
          "name": "support.function.string.nibi",
          "match": "\\b(str-lit|str-set-at)\\b"
        }
      ]
    },
    "module-access": {
      "patterns": [
        {
          "name": "punctuation.accessor.nibi",
          "match": "::"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.section.parens.begin.nibi",
          "match": "\\("
        },
        {
          "name": "punctuation.section.parens.end.nibi",
          "match": "\\)"
        },
        {
          "name": "punctuation.section.brackets.begin.nibi",
          "match": "\\["
        },
        {
          "name": "punctuation.section.brackets.end.nibi",
          "match": "\\]"
        },
        {
          "name": "punctuation.section.braces.begin.nibi",
          "match": "\\{"
        },
        {
          "name": "punctuation.section.braces.end.nibi",
          "match": "\\}"
        }
      ]
    }
  }
}
